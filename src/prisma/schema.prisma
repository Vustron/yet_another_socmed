// format shift + alt + f

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user model
model User {
  id           String    @id
  username     String    @unique
  displayName  String
  email        String?   @unique
  passwordHash String?
  googleId     String?   @unique
  avatarUrl    String?
  bio          String?
  sessions     Session[]

  createdAt DateTime @default(now())

  @@map("users")
}

// session model
model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}
